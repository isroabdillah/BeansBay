<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.signup.Signup2Activity">



    <TextView
        android:id="@+id/TVtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="40dp"
        android:textAlignment="center"
        android:fontFamily="@font/poppins_bold"
        android:text="Let Us Know You Better"
        android:textColor="@color/brown"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="120dp"
        app:layout_constraintTop_toTopOf="parent" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:startIconDrawable="@drawable/baseline_boy_24"
        app:layout_constraintTop_toBottomOf="@+id/TVteksnama2_hint">

        <AutoCompleteTextView
            android:id="@+id/ed_kelamin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            />
    </com.google.android.material.textfield.TextInputLayout>


    <TextView
        android:id="@+id/TVteksnama2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:text="Jenis Kelamin"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TVtitle"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/TVteksnama2_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/TVteksnama2"
        app:layout_constraintTop_toBottomOf="@id/TVteksnama2"
        android:text="Laki-Laki atau Perempuan?"/>

    <TextView
        android:id="@+id/textCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:text="Category Coffe"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/textCategory_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Tell us which coffee you prefer!"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@id/textCategory"
        app:layout_constraintTop_toBottomOf="@+id/textCategory"
        android:fontFamily="@font/poppins_regular"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/CategoryEditTextLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textCategory_hint"
        app:startIconDrawable="@drawable/baseline_coffee_24">

        <AutoCompleteTextView
            android:id="@+id/ed_category_coffe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text" />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/AromaEditTextLayout"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textAroma"
        app:startIconDrawable="@drawable/baseline_whatshot_24"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        >

        <AutoCompleteTextView
            android:id="@+id/ed_aroma"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/textAroma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:text="Kuat Aroma Coffe"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CategoryEditTextLayout"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="16sp"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/KuatAromaEditTextLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/AromaEditTextLayout"
        app:layout_constraintStart_toEndOf="@+id/AromaEditTextLayout"
        app:layout_constraintTop_toTopOf="@+id/AromaEditTextLayout"
        app:layout_constraintEnd_toEndOf="@id/CategoryEditTextLayout"
        app:startIconDrawable="@drawable/baseline_whatshot_24">

        <com.example.beansbay.ui.customview.CustomEditText
            android:id="@+id/ed_kuat_aroma"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:hint="1-10"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Skor Aroma"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/KuatAromaEditTextLayout"
        app:layout_constraintStart_toStartOf="@+id/KuatAromaEditTextLayout"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="16sp"
        />


    <TextView
        android:id="@+id/textAsam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:text="Kuat Asam Coffe"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AromaEditTextLayout"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="16sp"
        />


    <TextView
        android:id="@+id/textSkorAsam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Kuat Asam Coffe"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/SkorAsamEditTextLayout"
        app:layout_constraintStart_toStartOf="@+id/SkorAsamEditTextLayout" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/KuatAsamEditTextLayout"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textAsam"
        app:startIconDrawable="@drawable/baseline_whatshot_24">

        <AutoCompleteTextView
            android:id="@+id/ed_kuat_asam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"

            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/SkorAsamEditTextLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/KuatAsamEditTextLayout"
        app:layout_constraintStart_toEndOf="@+id/AromaEditTextLayout"
        app:layout_constraintTop_toTopOf="@+id/KuatAsamEditTextLayout"

        app:layout_constraintEnd_toEndOf="@id/CategoryEditTextLayout"
        app:startIconDrawable="@drawable/baseline_whatshot_24">

        <com.example.beansbay.ui.customview.CustomEditText
            android:id="@+id/ed_skor_asam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:hint="1-10"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btn_signup"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:backgroundTint="@color/red_bb"
        android:text="Sign Up"
        android:textColor="@color/white"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/KuatAsamEditTextLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <ProgressBar
        android:id="@+id/loading"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />


</androidx.constraintlayout.widget.ConstraintLayout>