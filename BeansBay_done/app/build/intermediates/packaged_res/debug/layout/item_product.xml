<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="170dp"
    android:maxHeight="240dp"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@drawable/shape_product"
    >

    <ImageView
        android:id="@+id/foto_produk"
        android:layout_marginTop="12dp"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:scaleType="centerCrop"
        tools:src="@tools:sample/avatars"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="8dp"
        />


    <TextView
        android:id="@+id/nama_produk_spotlight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/nama_produk"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_bold"
        android:textAlignment="center"
        android:textSize="18sp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_baseline_storefront_24"

            />

        <TextView
            android:id="@+id/nama_toko_spotlight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/toko_produk"
            android:fontFamily="@font/poppins_regular"
            android:layout_gravity="center"
            android:textSize="10sp"
            android:textAlignment="center"
            android:textColor="@color/red_bb"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/harga_produk_spotlight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="@string/harga_produk"
        android:textColor="@color/red"
        android:fontFamily="@font/poppins_semibold"
        android:textStyle="bold"
        android:layout_gravity="end"
        android:textSize="12sp"
        android:layout_marginEnd="10dp"
        />

</LinearLayout>